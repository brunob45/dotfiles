[module/powermenu]
type = custom/menu

expand-right = false

format-spacing = 0

label-open = 󰐦
label-open-foreground = ${colors.base0}
label-close = 󰅚
label-close-foreground = ${colors.base01}
label-separator = ·
label-separator-foreground = ${colors.base01}

menu-0-0 = 󰑐
menu-0-0-exec = menu-open-1
menu-0-1 = 󰐥
menu-0-1-exec = menu-open-2
menu-0-2 = 󰤄
menu-0-2-exec = systemctl suspend
menu-0-3 = 󰍁
menu-0-3-exec = pkill -n polybar ; i3-msg exit

menu-1-0 = "Reboot"
menu-1-0-exec = systemctl reboot

menu-2-0 = "Power off"
menu-2-0-exec = systemctl poweroff

[module/pkgupdates]
type = custom/script
exec = $HOME/.scripts/pkgupdate.sh
tail = true
click-left = kill -USR1 %pid%

[module/forecast]
type = custom/script
; Weather emojis : "✨☁️🌫🌧🌧❄️❄️🌦🌦🌧🌧🌨🌨⛅️☀️🌩⛈⛈☁️🌑🌒🌓🌔🌕🌖🌗🌘"
exec = curl fr.wttr.in/?format="%c%t\n" 2>/dev/null | sed "s/\+//"
label = %output%
format = <label>
interval = 600
format-underline = ${colors.blue}
format-font = 4

