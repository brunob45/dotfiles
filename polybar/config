[bar/mybar]
monitor = ${env:MONITOR:}
monitor-fallback =
monitor-strict = false
override-redirect = true
bottom = false
fixed-center = true
radius = 8.0

width = 99%
height = 3%

offset-x = .5%
offset-y = .5%

; dpi-x=180
; dpi-y=180

