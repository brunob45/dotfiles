[colors]
base03 =    #e0002b36
base02 =    #e0073642
base01 =    #586e75
base00 =    #657b83
base0  =    #839496
base1  =    #93a1a1
base2  =    #eee8d5
base3  =    #fdf6e3

green  =    #55aa55
yellow =    #ffb52a
red    =    #ff5555
purple =    #9f78e1
blue   =    #0a6cf5
white  =    ${self.base0}
black  =    #000000

background = ${self.base03}
background-alt = ${self.base02}
foreground = ${self.base0}
foreground-alt = ${self.base01}
primary = ${self.base0}
secondary = #e60053
alert = #bd2c40

[bar/mybar]
monitor = ${env:MONITOR:}
monitor-fallback =
monitor-strict = false
override-redirect = true
bottom = false
fixed-center = true
radius = 8.0

width = 99%
height = 3%

offset-x = .5%
offset-y = .5%

; dpi-x=180
; dpi-y=180

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = ${colors.white}

border-size = 0
border-color = ${colors.base01}

padding-left = 1
padding-right = 2

module-margin-left = 1
module-margin-right = .1

font-0 = "IBM Plex Mono:style=Regular:size=12;2"
font-1 = "Material Design Icons:style=Regular:size=14;4"
font-2 = "Fira Code:style=Regular:size=12;4"
font-3 = "Noto Sans Weather:style=Regular:size=14;3"

modules-left = i3
modules-center = date

tray-position = right
tray-padding = 2
;tray-background = #0063ff

wm-restack = i3

;override-redirect = true

cursor-click = pointer
cursor-scroll = ns-resize

locale = fr_CA.UTF-8


[bar/primary]
inherit = bar/mybar
modules-right = pkgupdates alsa xbacklight forecast wlan battery powermenu


[bar/secondary]
inherit = bar/mybar
modules-right = monitor


[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
padding = 1

; Only show workspaces on the same output as the bar
pin-workspaces = true

label-mode-padding = ${self.padding}
label-mode-foreground = ${colors.black}
label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-background = ${colors.background-alt}
label-focused-underline= ${colors.primary}
label-focused-padding = ${self.padding}

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-padding = ${self.padding}

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-background = ${colors.alert}
label-urgent-padding = ${self.padding}

; Separator in between workspaces
; label-separator = |


[module/date]
type = internal/date
interval = 5

date = "%e %b"
time = %H:%M

; format-prefix = "󰅐 "
format-prefix-foreground = ${colors.foreground}
; format-underline = ${colors.blue}

label = %date% · %time%

[module/alsa]
type = internal/alsa

format-volume = <ramp-volume> <bar-volume>
;label-volume = 󱄠 %percentage%%
label-volume = 󱄠
label-volume-foreground = ${root.foreground}

format-muted = <label-muted> <bar-volume>
label-muted = 󰖁
label-muted-foreground = ${colors.base01}

bar-volume-width = 10
bar-volume-foreground-0 = ${colors.green}
bar-volume-foreground-1 = ${colors.green}
bar-volume-foreground-2 = ${colors.green}
bar-volume-foreground-3 = ${colors.green}
bar-volume-foreground-4 = ${colors.green}
bar-volume-foreground-5 = ${colors.yellow}
bar-volume-foreground-6 = ${colors.red}
bar-volume-gradient = false
bar-volume-indicator = |
; bar-volume-indicator-font = 3
bar-volume-fill = ─
bar-volume-fill-font = 3
bar-volume-empty = ·
; bar-volume-empty-font = 3
bar-volume-empty-foreground = ${colors.foreground-alt}

ramp-volume-0 = 󰕿
ramp-volume-1 = 󰖀
ramp-volume-2 = 󰕾

[module/powermenu]
type = custom/menu

expand-right = false

format-spacing = 0

label-open = 󰐦
label-open-foreground = ${colors.base0}
label-close = 󰅚
label-close-foreground = ${colors.base01}
label-separator = ·
label-separator-foreground = ${colors.base01}

menu-0-0 = 󰑐
menu-0-0-exec = menu-open-1
menu-0-1 = 󰐥
menu-0-1-exec = menu-open-2
menu-0-2 = 󰤄
menu-0-2-exec = systemctl suspend
menu-0-3 = 󰍂
menu-0-3-exec = pkill -n polybar ; i3-msg exit
menu-0-4 = 󰍁
menu-0-4-exec = dm-tool switch-to-greeter

menu-1-0 = "Reboot"
menu-1-0-exec = systemctl reboot

menu-2-0 = "Power off"
menu-2-0-exec = systemctl poweroff

[module/pkgupdates]
type = custom/script
exec = $HOME/.scripts/pkgupdate.sh
tail = true
click-left = kill -USR1 %pid%

[module/forecast]
type = custom/script
; Weather emojis : "✨☁️🌫🌧🌧❄️❄️🌦🌦🌧🌧🌨🌨⛅️☀️🌩⛈⛈☁️🌑🌒🌓🌔🌕🌖🌗🌘"
exec = $HOME/.scripts/weather.sh
label = %output%
format = <label>
interval = 600
format-underline = ${colors.blue}
format-font = 4

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
pseudo-transparency = true

[global/wm]
margin-top = 5
margin-bottom = 5

