[module/forecast]
type = custom/script
; Weather emojis : "âœ¨â˜ï¸ğŸŒ«ğŸŒ§ğŸŒ§â„ï¸â„ï¸ğŸŒ¦ğŸŒ¦ğŸŒ§ğŸŒ§ğŸŒ¨ğŸŒ¨â›…ï¸â˜€ï¸ğŸŒ©â›ˆâ›ˆâ˜ï¸ğŸŒ‘ğŸŒ’ğŸŒ“ğŸŒ”ğŸŒ•ğŸŒ–ğŸŒ—ğŸŒ˜"
exec = curl fr.wttr.in/?format="%c%t\n" 2>/dev/null | sed "s/\+//"
